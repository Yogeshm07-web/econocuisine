<div class="container">
  <h1>Expense Tracker</h1>
  <a href="/" class="home-link">
    <span class="home-icon">üè†</span>
    <span class="home-text">Back to Home</span>
  </a>
  <div class="section">
    <h2 class="section-title">Expense Details</h2>
    <div class="expense-details">
      <% if @expenses.present? %>
        <% last_expense = @expenses.last %>
        <p><strong>Date:</strong> <%= last_expense.date %></p>
        <p><strong>Category:</strong> <%= last_expense.category %></p>
        <p><strong>Amount:</strong> <%= last_expense.amount %></p>
        <p><strong>Notes:</strong> <%= last_expense.notes %></p>
      <% else %>
        <p>No expenses found.</p>
      <% end %>
    </div>
  </div>
  <div class="section">
    <h2 class="section-title">Income Details</h2>
    <div class="income-details">
      <% if @incomes.present? %>
        <% last_income = @incomes.last %>
        <p><strong>Date:</strong> <%= last_income.Idate %></p>
        <p><strong>Source:</strong> <%= last_income.source %></p>
        <p><strong>Amount:</strong> <%= last_income.Iamount %></p>
      <% else %>
        <p>No incomes found.</p>
      <% end %>
    </div>
  </div>
  <div class="section">
    <h2 class="section-title">Add Review Notes</h2>
    <div class="section-content">
      <div class="form-group">
        <label for="reviewNotes">Notes:</label>
        <textarea id="reviewNotes" name="reviewNotes" rows="3" placeholder="Enter any comments on the analysis"></textarea>
      </div>
      <button onclick="saveReview()">Save Review</button>
    </div>
  </div>
</div>


<script>
  // Function to save review notes
  function saveReview() {
    const reviewNotes = document.getElementById('reviewNotes').value;
    alert('Review notes saved successfully!');
  }
</script>

</body>
</html>
