<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense Tracker</title>
  <style>
    body {
      background-image: url('https://c0.wallpaperflare.com/preview/560/75/713/board-chalk-feedback-review.jpg');
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .card {
      flex: 1 1 45%;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .card-body {
      padding: 20px;
    }

    .card-title {
      margin-top: 0;
      font-size: 20px;
      color: #333;
      text-align: center;
    }

    .item-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .item {
      margin-bottom: 10px;
    }

    .chart-container {
      height: 300px;
      margin-top: 20px;
    }
  </style>
</head>
<body>

<div class="container">

  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Basket Items</h2>
      <ul class="item-list">
        <% @basket_items.group_by(&:product_id).each do |product_id, items| %>
          <% total_price = items.sum { |item| item.product.price * item.quantity } %>
          <li class="item"><%= items.first.product.name %> - Rs <%= number_to_currency(total_price, unit: '') %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Inventory Items</h2>
      <ul class="item-list">
        <% @inventory_items.each do |inventory_item| %>
          <li class="item"><%= inventory_item.name %> - <%= inventory_item.quantity %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Pie Chart</h2>
      <div class="chart-container">
        <canvas id="budgetPieChart"></canvas>
      </div>
    </div>
  </div>

</div>

</body>
</html>


<script>
  function updatePieChart() {
    const totalIncome = 1000;
    const totalBasketPrice = 300;
    const remainingBalance = totalIncome - totalBasketPrice;

    const ctx = document.getElementById('budgetPieChart').getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: ['My Budget for Groceries', 'Total Basket Price', 'Remaining Balance'],
        datasets: [{
          label: 'Amount (Rs)',
          data: [totalIncome, totalBasketPrice, remainingBalance],
          backgroundColor: [
            'rgba(54, 162, 235, 0.5)',
            'rgba(255, 206, 86, 0.5)',
            'rgba(75, 192, 192, 0.5)',
          ],
          borderColor: [
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
      }
    });
  }

  window.onload = function() {
    // Update the pie chart
    updatePieChart();
  }
</script>
</body>
</html>
