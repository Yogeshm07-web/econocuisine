<head>
  <link rel="stylesheet" href="stylesheet/budget.css">
</head>
<body>
  <div class="container">
    <h1 class="title">Incomes Tracking</h1>
    <div class="form-container">
      <%= form_with(model: Income.new, url: incomes_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :source, class: "label" %>
          <%= form.text_field :source, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.label :amount, class: "label" %>
          <%= form.text_field :amount, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.label :date, class: "label" %>
          <%= form.date_field :date, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.submit 'Add Income', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <h1 class="title">Expenses Tracking</h1>
    <div class="form-container">
      <%= form_with(model: Expense.new, url: expenses_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :category, class: "label" %>
          <%= form.text_field :category, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.label :amount, class: "label" %>
          <%= form.number_field :amount, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.label :date, class: "label" %>
          <%= form.date_field :date, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.label :notes, class: "label" %>
          <%= form.text_area :notes, class: "input" %>
        </div>

        <div class="form-group">
          <%= form.submit 'Add Expense', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <h1 class="title">Income vs Expenses Analysis</h1>

  <canvas id="analysisChart" width="400" height="400"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="script.js"></script>
</body>
